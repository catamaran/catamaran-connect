# project build scripts configuration 
# edit these settings if your setup is different
export CAT_ROOT=/catamaran
export CAT_CURRENT_PROJECT=catamaran-connect
export CAT_TOMCAT_ROOT=$CAT_ROOT/servers/$CAT_CURRENT_PROJECT/tomcat
export CAT_TOMCAT_WEBAPPS=$CAT_TOMCAT_ROOT/webapps
export CAT_TOMCAT_CURRENT_WEBAPP=$CAT_TOMCAT_WEBAPPS/$CAT_CURRENT_PROJECT

# capture the directory path this script was executed from
export CAT_WORKING_DIR=`pwd`

# validate that tomcat server exists in expected location
if [ ! -d "$CAT_TOMCAT_WEBAPPS" ]
then
  echo "Tomcat directory $CAT_TOMCAT_WEBAPPS not found, please check your setup."
fi
